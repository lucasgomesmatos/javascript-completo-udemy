<%- include('includes/head') %>
<%- include('includes/nav') %>


<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo:</p>

      <%- include('includes/messages'); %>

      <div class="row">
        <div class="col-lg">
          <h4>Fazer seu cadastro</h4>
          <p>Se você ainda não tem cadastro, crie sua conta.</p>
          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%=csrfToken%>>
            <div class="mb-3">
              <label for="email" class="form-label">Seu Email</label>
              <input type="email" class="form-control" name="email">
            </div>
      
            <div class="mb-3">
              <label for="password" class="form-label">Senha</label>
              <input type="password" class="form-control"  name="password">
            </div>
            <button type="submit" class="btn btn-success mb-5">Criar minha conta</button>
          </form>
        </div>

        <div class="col-lg">
          <h4>Fazer seu login</h4>
          <p>Se você já tem uma conta, faça login abaixo.</p>
          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%=csrfToken%>>
            <div class="mb-3">
              <label for="email" class="form-label">Seu Email</label>
              <input type="email" class="form-control" id="email" name="email">
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Senha</label>
              <input type="password" class="form-control" id="password" name="password">
            </div>
            <button type="submit" class="btn btn-success">Entrar</button>
          </form>
        </div>
      </div>

    </div>
    <div class="col-lg-2"></div>
  </div>
</div>



<%- include('includes/footer') %>