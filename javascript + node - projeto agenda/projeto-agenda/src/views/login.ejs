<%- include('includes/head') %>
<%- include('includes/nav') %>


<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo:</p>

      <div class="row">
        <div class="col my-3">
          <div class="alert alert-danger text-center">
            Um erro qualquer
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg">
          <h4>Fazer seu cadastro</h4>
          <p>Se você ainda não tem cadastro, crie sua conta.</p>
          <form action="/login/register" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %> ">
            <input type="hidden" name="_csrf">
            <div class="mb-3">
              <label for="email" class="form-label">Seu Email</label>
              <input type="email" class="form-control" id="email" name="email">
            </div>
            <div class="mb-3">
              <label for="nome" class="form-label">Nome completo</label>
              <input type="text" class="form-control" id="nome" name="nome">
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Senha</label>
              <input type="password" class="form-control" id="password" name="password">
            </div>
            <button type="submit" class="btn btn-success">Criar minha conta</button>
          </form>
        </div>

        <div class="col-lg">
          <h4>Fazer seu login</h4>
          <p>Se você já tem uma conta, faça login abaixo.</p>
          <form action="/login/login" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %> ">
            <div class="mb-3">
              <label for="email" class="form-label">Seu Email</label>
              <input type="email" class="form-control" id="email" name="email">
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Senha</label>
              <input type="password" class="form-control" id="password" name="password">
            </div>
            <button type="submit" class="btn btn-success">Entrar</button>
          </form>
        </div>
      </div>

    </div>
    <div class="col-lg-2"></div>
  </div>
</div>



<%- include('includes/footer') %>